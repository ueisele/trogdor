{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "update python dependencies",
            "command": "conda",
            "args": ["env", "update", "trogdor-ducktape", "-f", "environment.yml"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run tests",
            "command": "/usr/local/bin/entrypoint.sh",
            "args": ["python", "setup.py", "test"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}